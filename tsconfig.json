{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@finos/calm-shared": ["shared/src"],
            "@finos/calm-shared/*": ["shared/src/*"]
        },
        "lib": [
            "esnext"
        ],
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es2016",
        "module": "NodeNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    }
}