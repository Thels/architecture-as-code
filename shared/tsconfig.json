{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "es2016",
        "module": "Preserve",
        "moduleResolution": "bundler",
        "outDir": "./dist",
        "rootDir": "src",
        "typeRoots": [
            "node_modules/@types",
            "../node_modules/@types"
        ],
        "strict": false,
        "lib": [
            "esnext"
        ] 
    },
    "include": [
        "src/**/*",
        "src/*/*.spec.ts"
    ]
    
}
